
<form action="/admin/menuSemanal/modificar" method="post" enctype="multipart/form-data" class="formLogin formModificar">

    <h2 class="h2AgregarModificar h2modificar" >Modificar Plato Principal</h2>

    <input type="hidden" value="{{menuSemanal.id}}" name="id">

    <input type="text" name="nombreDelPlato" id="" value="{{menuSemanal.nombreDelPlato}}">

    {{!-- <input type="text" name="descripcion" id="" value="{{menuSemanal.descripcion}}"> --}}

    <textarea name="descripcion" id="" cols="30" rows="10">{{menuSemanal.descripcion}}</textarea>
    
    <input type="text" name="precio" id="" value="{{menuSemanal.precio}}">

    <div class="formDivLabel">
        <div>
            <label for="" class="labelCheckbox">
                <input type="checkbox" name="img_delete" id="img_delete" value="1" class="inputCheckbox">Eliminar imagen actual.
            </label>

            <input type="hidden" name="img_original" value="{{platoPrincipal.img_id}}">
        </div>

        <label for="">Seleccionar nueva imagen: <br>
            <input type="file" name="imagen" class="inputImg">
        </label>
    </div>
    
    <div class="divButtons">
        <a href="/admin/menuSemanal" class="buttonLogin buttonCancelar" id="buttonAgregarCancelar">Cancelar</a>
        <button type="submit" class="buttonLogin" id="buttonAgregarCancelar">Modificar</button>
    </div>
</form>
{{#if error}}
    <p>{{message}}</p>
{{/if}}